<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.filmlistia.filmistController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="menu_createList" mnemonicParsing="false" text="New List" />
            <MenuItem fx:id="menu_loadList" mnemonicParsing="false" text="Load List" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem fx:id="menu_saveList" mnemonicParsing="false" onAction="#saveMovieList" text="Save" />
            <MenuItem fx:id="menu_saveListAs" mnemonicParsing="false" text="Save As…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="menu_addfilm" mnemonicParsing="false" onAction="#addFilm" text="Add Film" />
            <MenuItem fx:id="menu_editfilm" mnemonicParsing="false" onAction="#editFilm" text="Edit Film Details" />
            <MenuItem fx:id="menu_markwatched" mnemonicParsing="false" onAction="#markwatched" text="Mark as Watched" />
                  <MenuItem mnemonicParsing="false" onAction="#unkmarkwatched" text="Mark as Unwatched" />
            <MenuItem fx:id="menu_delete" mnemonicParsing="false" onAction="#deleteFilm" text="Delete" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="btn_menupreferences" mnemonicParsing="false" onAction="#inspectPreferences" text="Preferences" />
                  <MenuItem fx:id="menu_logout" mnemonicParsing="false" onAction="#logout" text="Logout" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Text fx:id="txt_welcome" layoutX="63.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to Flimist!" />
            <Button fx:id="btn_addFilm" layoutX="63.0" layoutY="320.0" mnemonicParsing="false" onAction="#addFilm" prefHeight="25.0" prefWidth="81.0" text="Add a Film" />
            <TableView fx:id="displayTable" layoutX="63.0" layoutY="76.0" prefHeight="224.0" prefWidth="515.0">
              <columns>
                <TableColumn fx:id="table_filmTitle" prefWidth="113.0" text="Title" />
                <TableColumn fx:id="table_filmDuration" prefWidth="88.0" text="Duration" />
                  <TableColumn fx:id="table_filmYear" prefWidth="87.0" text="Year" />
                  <TableColumn fx:id="table_filmDirector" prefWidth="95.0" text="Director" />
                  <TableColumn fx:id="table_filmGenre" prefWidth="62.0" text="Genre" />
                  <TableColumn fx:id="table_filmStatus" prefWidth="69.0" text="Watched" />
              </columns>
            </TableView>
            <TextField fx:id="input_searchBar" layoutX="377.0" layoutY="37.0" prefHeight="25.0" prefWidth="132.0" promptText="Search" />
            <Button fx:id="btn_editFilm" layoutX="151.0" layoutY="320.0" mnemonicParsing="false" onAction="#editFilm" prefHeight="25.0" prefWidth="81.0" text="Edit Film" />
            <Button fx:id="btn_markWatched" layoutX="241.0" layoutY="320.0" mnemonicParsing="false" onAction="#markwatched" prefHeight="25.0" prefWidth="113.0" text="Mark as Watched" />
            <Button fx:id="btn_logout" layoutX="71.0" layoutY="12.0" mnemonicParsing="false" onAction="#logout" prefHeight="25.0" prefWidth="65.0" text="Logout" textFill="RED" />
            <Button fx:id="btn_search" layoutX="521.0" layoutY="37.0" mnemonicParsing="false" onAction="#btn_startsearch" prefHeight="25.0" prefWidth="57.0" text="Search" />
            <Button fx:id="btn_refreshtable" layoutX="362.0" layoutY="320.0" mnemonicParsing="false" onAction="#refreshMovieList" prefHeight="25.0" prefWidth="81.0" text="Refresh List" />
            <Button fx:id="btn_save" layoutX="14.0" layoutY="12.0" mnemonicParsing="false" onAction="#saveMovieList" prefHeight="25.0" prefWidth="47.0" text="Save" />
      </children>
    </AnchorPane>
  </children>
</VBox>
